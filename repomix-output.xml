        # Bi-weekly supply chain index (every other Thursday)
        if current_date.weekday() == 3 and (day // 7) % 2 == 0:  # Thursday, every other week
            start = current_date + timedelta(hours=13)
            end = start + timedelta(hours=3)
            
            Job.objects.create(
                index=all_indexes[3],
